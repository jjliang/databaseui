
	<%= form_for(resource, :as => resource_name, :html =>{:class => "form-horizontal"} , :url => registration_path(resource_name))  do |f| %>
	<%= devise_error_messages! %>
		
	<div class="row-fluid">
		<div class=span">
			<h2 style="text-align: center">Sign up <br />
				<button type="button" data-toggle="collapse" data-target="#inst" class="btn btn-info btn-mini">
				Instructions
				</button>
			</h2>
		</div>
	</div>
	
	<div class="span5 offset3">
		<div id="inst" style="text-align: center" class="collapse">
			<div class="well">
			<b>
				Please fill out the information below.<br \> 
				If your project is not listed please select New Project 
				and write your project name in the comment area.
			</b>
			</div>
		</div>
	</div>
	
	<div class="span5 offset3">
		<div class="well">
			<div class="container ">
			
				<div class="row">
					<div class="span3">
						<div>
							<br />
						<label for="user_firstname">First name</label>
  <input id="user_firstname" name="user[firstname]" type="text" class="span2" /><br />
						</div>
					</div>

					<div>
						<br />
						<label for="user_lastname">Last name</label>
  <input id="user_lastname" name="user[lastname]" type="text" class="span2" /><br />
					</div>
				</div>

				<div class="row">
					<div class="span3">
						<div>
							<br />
						<label for="user_username">Username</label>
  <input id="user_username" name="user[username]" type="text" class="span2" /><br />
						</div>
					</div>
			
					<div>
						<br />
						<label for="user_email">E-Mail</label>
  <input id="user_email" name="user[email]" type="text" class="span2" /><br />
					</div>
				</div>
					
				<div class="row">
					<div class="span3">
						<div> 
							<br />
							<label for="user_password">Password</label>
  <input id="user_password" name="user[password]" type="text" class="span2" /><br />
						</div>
					</div>
					
					<div>
						<br />
						<label for="user_password_confirmation">Password Confirmation</label>
  <input id="user_password_confirmation" name="user[password_confirmation]" type="text" class="span2" /><br />
						
					</div>
				</div>
					
				<div class="row">
					<div class="span3">
						<div>
							<br />
							<%= f.label :project_id %>
							<%= collection_select(:user, :project_id, Project.all, :id, :name, {:prompt => "Please select project"},{:class => "span2"}) %>
						</div>
					</div>
					
					<div>
						<br />
						<%= f.label :comment %>
						<%= f.text_area :comment, :class => "span2", :rows => "5" %><br />
					</div>
				</div>
				
				<div class="row-fluid">
					<div class="span3">
						<div>
							<%= f.submit "Sign up" %> 
						</div>
						<%= render "devise/shared/links" %>
				</div>
			</div>
	</div>
<% end %>

